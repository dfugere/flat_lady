.header
  %h1 Editing imported_company

.body
  .section
    = error_messages_for :imported_company

    - form_for(:imported_company, :url => object_url, :html => { :method => :put }) do |f|
      = render :partial => "form", :locals => { :f => f }
      %p= submit_tag "Update"
  
    = link_to 'Show', object_url
    |
    = link_to 'Back', collection_url

- content_for :sidebar do
  .section.w-actions
    .header
      %h1 Actions
    .body
      %ul
        %li.last
          =link_to 'New imported_company', new_object_url

  .section.w-actions
    .body
      - if @previous
        .previous= link_to( "&laquo; #{_('imported_company précédente')}",   edit_imported_company_path( @previous ))
      - if @previous and @next
        %span &nbsp;...&nbsp; 
      - if @next
        .next= link_to( "#{_('imported_company suivante')} &raquo;",  edit_imported_company_path( @next))
