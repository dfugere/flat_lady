.header
  %h1 Editing <%= singular_name %>

.body
  .section
    = error_messages_for :<%= singular_name %>

    - form_for(:<%= singular_name %>, :url => object_url, :html => { :method => :put }) do |f|
      = render :partial => "form", :locals => { :f => f }
      %p= submit_tag "Update"
  
    = link_to 'Show', object_url
    |
    = link_to 'Back', collection_url

- content_for :sidebar do
  .section.w-actions
    .header
      %h1 Actions
    .body
      %ul
        %li.last
          =link_to 'New <%= singular_name %>', new_object_url

  .section.w-actions
    .body
      - if @previous
        .previous= link_to( "&laquo; #{_('<%= singular_name %> précédente')}",   edit_<%= singular_name %>_path( @previous ))
      - if @previous and @next
        %span &nbsp;...&nbsp; 
      - if @next
        .next= link_to( "#{_('<%= singular_name %> suivante')} &raquo;",  edit_<%= singular_name %>_path( @next))
